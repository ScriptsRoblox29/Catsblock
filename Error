        </button>
    </div>

    <div class="language-wrapper">
        <button class="lang-trigger" onclick="toggleLangMenu()">
            Language: <span id="current-lang">Portugu√™s</span>
        </button>
        <ul class="lang-menu" id="lang-menu">
            <li onclick="changeLang('pt')">Portugu√™s</li>
            <li onclick="changeLang('en')">English</li>
            <li onclick="changeLang('es')">Espa√±ol</li>
        </ul>
    </div>

    <script>
        // L√≥gica do Toast (Mensagem de erro)
        function closeToast() {
            const toast = document.getElementById('toast-error');
            toast.classList.add('hide');
            setTimeout(() => { toast.style.display = 'none'; }, 500);
        }

        // Fecha autom√°tico ap√≥s 10 segundos (10000ms)
        setTimeout(closeToast, 10000);

        // L√≥gica de Idiomas
        const translations = {
            pt: { title: "CatsBlock est√° em manuten√ß√£o", d1: "Estamos limpando a bagun√ßa nos c√≥digos para o site voltar voando!", d2: "Por favor, aguarde e tente novamente em breve.", btn: "Try again", lang: "Portugu√™s" },
            en: { title: "CatsBlock is under maintenance", d1: "We're cleaning up the code mess to get the site flying again!", d2: "Please wait and try again shortly.", btn: "Try again", lang: "English" },
            es: { title: "CatsBlock est√° en mantenimiento", d1: "¬°Estamos limpiando el desorden en los c√≥digos para que el sitio vuelva volando!", d2: "Por favor, espere e intente de nuevo pronto.", btn: "Reintentar", lang: "Espa√±ol" }
        };

        function toggleLangMenu() {
            document.getElementById('lang-menu').classList.toggle('show');
        }

        function changeLang(lang) {
            document.getElementById('main-title').innerText = translations[lang].title;
            document.getElementById('desc-1').innerText = translations[lang].d1;
            document.getElementById('desc-2').innerText = translations[lang].d2;
            document.getElementById('btn-text').innerText = translations[lang].btn;
            document.getElementById('current-lang').innerText = translations[lang].lang;
            toggleLangMenu();
        }

        window.onclick = function(event) {
            if (!event.target.matches('.lang-trigger') && !event.target.closest('.lang-trigger')) {
                document.getElementById('lang-menu').classList.remove('show');
            }
        }
    </script>
